<Window x:Class="StudentsList.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Students group" Height="350" Width="525">
    <DockPanel>
        <Label DockPanel.Dock="Top">Список студентов:</Label>
        <DataGrid Name="dataGrid" AutoGenerateColumns="True" DockPanel.Dock="Top" />
        <StackPanel DockPanel.Dock="Bottom" Orientation="Horizontal" >
            <Button x:Name="addButton" VerticalAlignment="Bottom" Click="addButton_Click" >Add student</Button>
            <Button x:Name="loadFromXmlButton" VerticalAlignment="Bottom" Click="loadFromXmlButton_Click" >Load from XML</Button>
            <Button x:Name="saveToXmlButton" VerticalAlignment="Bottom" Click="saveToXmlButton_Click" >Save to XML</Button>
        </StackPanel>
    </DockPanel>
</Window>
